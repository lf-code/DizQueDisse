
@using DizQueDisse.Models
@{
}
<!doctype html>
<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="~/js/site_core.js"></script>
        <script src="~/js/home.js"></script>

        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">

        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Montserrat:300,400,500,700" rel="stylesheet">

        <link href="/css/core.css" rel="stylesheet" />
        <link href="/css/home.css" rel="stylesheet" />


    </head>
    <body>
        <div class="top-container" style="background-image: url('images/obama.jpg');">

            <header>
                <div class="header-logo">
                    <h1>DizQueDisse<span class="alpha">alpha v0.2</span></h1>
                </div>
            </header>

            <section class="main-container">

                <div class="tweets-container">
                    @await Html.PartialAsync("_homeTweetWrapperTemplate", "0")
                    @foreach (TweetIdAndStateVM t in Model)
                    {
                        @await Html.PartialAsync("_homeTweetWrapperTemplate", t.TweetId)
                    }
                    <div class="loadmore">
                        <button title="ver mais tweets" style="display:none"><i class="fas fa-ellipsis-h"></i></button>
                        <span class="wait"><i class="fas fa-spinner fa-spin"></i></span>
                    </div>
                </div>

            </section>

            <section id="featured-services">
                <div class="top-title">
                    <img src="~/images/twitter_logo.png" height="42" width="42"/>
                    <h2>Contas Automatizadas</h2>
                </div>
                <div class="box">
                    <i class="far fa-sun"></i>
                    <h4 class="title"><a href="https://twitter.com/utilidadespt">Utilidades</a></h4>
                    <h5 class="twitter-link">@@utilidadespt</h5>
                    <p class="description">Diversas utilidades e curiosidades: previsão do tempo, citações, etc..</p>
                </div>
            </section>

        </div>

    </body>
</html>